<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.garcon.garcon.manageProfileActivity$PlaceholderFragment">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="762dp"
        android:background="@color/red"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColor="@color/white">

        <ImageView
            android:id="@+id/saveprofile"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/saveicon"
            android:text="SAVE CHANGES"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/editprofile"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/editsort"
            android:text="EDIT"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="First Name: "
            android:textColor="@color/white"
            android:textSize="17dip"
            android:layout_alignBaseline="@+id/editablefirstname"
            android:layout_alignBottom="@+id/editablefirstname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editablefirstname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:layout_below="@+id/editprofile"
            android:layout_alignLeft="@+id/editablepassword"
            android:layout_alignStart="@+id/editablepassword" />

        <TextView
            android:id="@+id/lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Last Name: "
            android:textColor="@color/white"
            android:textSize="17dip"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/firstname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editablelastname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/lastname"
            android:layout_toRightOf="@+id/lastname"
            android:layout_toEndOf="@+id/lastname" />
        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Password: "
            android:textColor="@color/white"
            android:textSize="17dip"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/editableemailid"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editablepassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:layout_alignBaseline="@+id/password"
            android:layout_alignBottom="@+id/password"
            android:layout_toRightOf="@+id/lastname"
            android:layout_toEndOf="@+id/lastname" />

        <TextView
            android:id="@+id/phnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Number: "
            android:textColor="@color/white"
            android:textSize="17dip"
            android:layout_below="@+id/editableemailid"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="140dp" />

        <EditText
            android:id="@+id/editablephnumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/phnumber"
            android:layout_toRightOf="@+id/password"
            android:layout_toEndOf="@+id/password" />

        <TextView
            android:id="@+id/emailid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Email: "
            android:textColor="@color/white"
            android:textSize="17dip"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/editablelastname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editableemailid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:layout_below="@+id/emailid"
            android:layout_alignRight="@+id/editablepassword"
            android:layout_alignEnd="@+id/editablepassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




    </RelativeLayout>
</ScrollView>

</RelativeLayout>
